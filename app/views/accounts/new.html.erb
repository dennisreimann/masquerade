<h2>Signup</h2>

<%= error_messages_for :account %>

<% form_for :account, :url => account_path do |f| -%>
	<div class="row">
		<%= f.label :login %>
		<%= f.text_field :login %>
	</div>
	<div class="row">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<div class="row">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div class="row">
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>
	<div>
  		<%= f.submit 'signup' %>
	</div>
<% end -%>
